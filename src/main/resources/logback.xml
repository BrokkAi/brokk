<configuration>
    <statusListener class="ch.qos.logback.core.status.NopStatusListener" />

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%msg%n</pattern>
        </encoder>
    </appender>

    <appender name="LANGCHAIN4J_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>.brokk/langchain4j.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>.brokk/langchain4j.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>5</maxHistory>
            <totalSizeCap>50MB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="dev.langchain4j" level="DEBUG">
        <appender-ref ref="LANGCHAIN4J_FILE" />
    </logger>

    <root level="ERROR">
        <appender-ref ref="CONSOLE" />
    </root>

    <logger name="*" level="ERROR"/>
    <logger name="io" level="ERROR"/>
    <logger name="flatgraph" level="ERROR"/>
</configuration>
