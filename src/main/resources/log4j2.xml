<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="ERROR">
  <Properties>
  <!-- On start up "./.brokk/debug.log" will be the place to store first 
       logs until "logfile.path is provided and configuration is reloaded -->
    <Property name="logFile">${sys:logfile.path:-.brokk/debug.log}</Property>
  </Properties>

  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%msg%n"/>
    </Console>
    <File name="FileLogger" fileName="${logFile}">
      <PatternLayout pattern="%d [%t] %-5level: %msg%n"/>
    </File>
  </Appenders>

  <Loggers>
    <Root level="debug">
      <AppenderRef ref="FileLogger"/>
    </Root>
  </Loggers>
</Configuration>
