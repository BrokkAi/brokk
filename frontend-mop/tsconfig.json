{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["DOM", "ES2020", "WebWorker"],
    "moduleResolution": "Node",
    "allowJs": true,
    "checkJs": false,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "types": []
  },
  "include": ["src/**/*", "types.d.ts"],
  "exclude": ["node_modules", "dist", "build"]
}
